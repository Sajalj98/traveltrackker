<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body class="page-wrap">
<div class="logos">
  <!--<div class="mlh-logo"></div>-->
  <!--<span class="plus">+</span>-->
  <!--<div class="azure-logo"></div>-->
</div>
<form class="update-form" action="/update" method="post">
  <% if (wrongPassword) { %>
    <div class="error-message">
      <span class="message">That password is not correct!</span>
    </div>
  <% } %>
  <h1 style="font-size: 60px">Travellers Track</h1>
  <section class="auth">
    <div class="field">
      <label class="input-label" for="name">Name</label>
      <input class="input-field" type="text" id="name" name="name" required>
    </div>
    <div class="field">
      <label class="input-label" for="dot">Date Of Travel</label>
      <input class="input-field" type="date" id="name" name = "date" required>
    </div>
  </section>
    <section class="auth">
    <div class="field">
      <label class="input-label" for="source">Source</label>
      <input class="input-field" type="text" id="source" name="source" required>
    </div>
    <div class="field">
      <label class="input-label" for="destination">Destination</label>
      <input class="input-field" type="text" id="destination" name="destination" required>
    </div>
  </section>
  <section class="auth">
    <div class="field">
      <label class="input-label" for="password">Password</label>
      <input class="input-field" type="password" id="password" name="password" required>
    </div>
  </section>
  <section class="update-section">
    <div class="update-field">
      <label class="input-label" for="update">Update</label>
      <input class="input-field" type="text" id="update" name="update" required>
    </div>
    <div class="field">
      <div class="spacer"></div>
      <input class="input-field submit-button" id="submit" type="submit" value="SUBMIT" required>
    </div>
  </section>
</form>
<div class="update-wrap">
  <% for(var i = 0; i < updates.length; i++) { %>
    <div class="update">
      <div class="name"><%= updates[ i ].name %></div>
      &nbsp;
      <div class="source"><%= updates[ i ].source %></div>
      &nbsp;
      <div class="destination"><%= updates[ i ].destination %></div>
      &nbsp;
      <div class="date"><%= updates[ i ].date %></div>
      &nbsp;
      <div class="content"><%= updates[ i ].update %></div>
      &nbsp;
      <div class="time"><%= moment(updates[ i ].createdAt).fromNow(); %></div>
    </div>
  <% } %>

</div>
<div class="pagination">
  <% for (var i = 0; i < pages; i++) { %>
    <a class="page-button <%= i == page ? "active" : ""%>" href="?page=<%= i %>"><%= i + 1 %></a>
  <% } %>
</div>
</body>
</html>